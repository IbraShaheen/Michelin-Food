{
  "scripts": {
    "install": "npm-run-all --parallel client:install server:install",
    "client:install": "cd client && npm install",
    "server:install": "cd server && npm install",
    "start": "npm-run-all --parallel client:start server:start",
    "client:start": "cd client && npm start",
    "server:start": "cd server && npm start"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5"
  }
}